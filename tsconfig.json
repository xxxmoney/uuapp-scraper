{
  "compilerOptions": {
    "esModuleInterop": false,
    "skipLibCheck": true,
    "target": "ES2022",
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleDetection": "auto",
    "isolatedModules": true,

    "strict": true,
    "noUncheckedIndexedAccess": true,
    "checkJs": true,
    "allowImportingTsExtensions": true,
    "noEmit": true,

    "module": "ES2022",
    "outDir": "./dist",
    "rootDir": "./src",

    "lib": ["es2022"],
    "sourceMap": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
